<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="memberMapper">
    <resultMap id="member" type="com.green.hanbang.member.vo.MemberVO">
        <id column="USER_NO"                            property="userNo"/>
        <result column="USER_NAME"                      property="userName"/>
        <result column="PASSWORD"                       property="passWord"/>
        <result column="LOGIN_TYPE"                     property="loginType"/>
        <result column="PHONE"                          property="phone"/>
        <result column="NICK_NAME"                      property="nickName"/>
        <result column="JOIN_DATE"                      property="joinDate"/>
        <association property="realtorDetailVO"         resultMap="realtorMapper.realtorDetail"/>
    </resultMap>

    <resultMap id="memberImg" type="com.green.hanbang.member.vo.MemberImgVO">
        <id column="PROFILE_IMG_NO"                 property="imgNo" />
        <result column="USER_NO"                    property="userNo" />
        <result column="PROFILE_IMG_NAME"           property="imgName" />
        <result column="ATTACHED_PROFILE_IMG_NAME"  property="attachedImgName" />
    </resultMap>

    <!-- 회원 가입 -->
    <insert id="join">
        INSERT INTO MEMBER_USER (
            USER_NO
            , USER_NAME
            , PASSWORD
            , LOGIN_TYPE
            , NICK_NAME
        ) VALUES (
            (SELECT 'USER_' || LPAD(NVL(MAX(TO_NUMBER(SUBSTR(USER_NO, 6))), 0) + 1, 3, '0')
            FROM MEMBER_USER)
            , #{userName}
            , #{passWord}
            , #{loginType}
            , #{nickName}
        )
    </insert>


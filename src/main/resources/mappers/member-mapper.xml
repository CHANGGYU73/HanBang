    <!-- 로그인 -->
    <select id="login" resultMap="member">
        SELECT USER_NO
        , USER_NAME
        , LOGIN_TYPE
        , NICK_NAME
        FROM MEMBER_USER
        WHERE USER_NAME = #{userName}
        AND PASSWORD = #{passWord}
    </select>

    <!-- 아이디 중복 확인 -->
    <select id="userNameCheck" resultType="String">
        SELECT USER_NAME
        FROM MEMBER_USER
        WHERE USER_NAME = #{userName}
    </select>

    <!-- 회원 탈퇴 기능 -->
    <delete id="memberDelete">
        DELETE FROM MEMBER_USER
        WHERE USER_NAME = #{userName}
    </delete>

    <!-- 비밀번호 변경 (회원 정보 수정의 경우) -->
    <update id="updatePassword">
        UPDATE FROM MEMBER_USER
        SET PASSWORD = #{passWord}
        WHERE USER_NAME = #{userName}
    </update>


</mapper>